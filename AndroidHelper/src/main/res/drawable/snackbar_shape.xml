<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/color_primary_light"
                android:startColor="@color/color_primary_light" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/_2sdp"
        android:left="0dp"
        android:right="@dimen/_2sdp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid tools:color="@color/success" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>
</layer-list>